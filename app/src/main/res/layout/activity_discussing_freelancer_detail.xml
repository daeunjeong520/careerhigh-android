<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisscussingFreelancerDetail">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/topBar"
        style="@style/CustomToolbarStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:padding="10dp"
            android:src="@drawable/arrow_back" />

        <TextView
            style="@style/ToolbarTextStyle"
            android:text="협의중" />

    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/btnChatroom"
        app:layout_constraintTop_toBottomOf="@id/topBar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <!-- 프로필 이미지 -->
            <ImageView
                android:id="@+id/freelancerImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/userc"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/clientImage"
                app:layout_constraintTop_toBottomOf="@id/topBar" />

            <ImageView
                android:id="@+id/clientImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/coco"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/freelancerImage"
                app:layout_constraintTop_toBottomOf="@id/topBar" />

            <TextView
                android:id="@+id/tvFreelancer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="프리랜서"
                android:layout_marginTop="6dp"
                app:layout_constraintTop_toBottomOf="@id/freelancerImage"
                app:layout_constraintStart_toStartOf="@id/freelancerImage"
                app:layout_constraintEnd_toEndOf="@id/freelancerImage" />

            <TextView
                android:id="@+id/tvClient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="클라이언트"
                android:layout_marginTop="6dp"
                app:layout_constraintTop_toBottomOf="@id/clientImage"
                app:layout_constraintStart_toStartOf="@id/clientImage"
                app:layout_constraintEnd_toEndOf="@id/clientImage" />

            <!-- 프리랜서 정보  -->
            <TextView
                android:id="@+id/freelancerInfoTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tvFreelancer"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Freelancer Info"
                android:textSize="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/labelJobGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="직군/직무"
                android:textColor="@color/purple"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/freelancerInfoTitle" />

            <TextView
                android:id="@+id/labelJobSkill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/purple"
                android:text="스킬"
                app:layout_constraintStart_toStartOf="@id/labelJobGroup"
                app:layout_constraintTop_toBottomOf="@id/labelJobGroup" />

            <TextView
                android:id="@+id/labelCareer"
                style="@style/Black14Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/purple"
                android:textStyle="bold"
                android:text="경력"
                app:layout_constraintStart_toStartOf="@id/labelJobGroup"
                app:layout_constraintTop_toBottomOf="@id/labelJobSkill" />

            <TextView
                android:id="@+id/labelStartDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/purple"
                android:text="시작 가능일"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/labelJobGroup"
                app:layout_constraintTop_toBottomOf="@id/labelCareer" />

            <TextView
                android:id="@+id/labelStarRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/purple"
                android:text="평점"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/labelJobGroup"
                app:layout_constraintTop_toBottomOf="@id/labelStartDate" />

            <TextView
                android:id="@+id/JobGroup"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="개발 > "
                app:layout_constraintBaseline_toBaselineOf="@id/labelJobGroup"
                app:layout_constraintStart_toStartOf="@id/StartDate" />

            <TextView
                android:id="@+id/Job"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="서버개발"
                app:layout_constraintBaseline_toBaselineOf="@id/labelJobGroup"
                app:layout_constraintStart_toEndOf="@+id/JobGroup"
                />

            <TextView
                android:id="@+id/JobSkill"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Java, Spring Framework"
                app:layout_constraintBaseline_toBaselineOf="@id/labelJobSkill"
                app:layout_constraintStart_toStartOf="@id/StartDate" />

            <TextView
                android:id="@+id/Proficiency"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="중급"
                android:background="@color/light_purple"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                app:layout_constraintBaseline_toBaselineOf="@id/labelJobSkill"
                app:layout_constraintStart_toEndOf="@+id/JobSkill"
                />

            <TextView
                android:id="@+id/Career"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="5년 이상"
                app:layout_constraintBaseline_toBaselineOf="@id/labelCareer"
                app:layout_constraintStart_toStartOf="@id/StartDate" />

            <TextView
                android:id="@+id/StartDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="2024-04-06"
                android:layout_marginStart="16dp"
                app:layout_constraintBaseline_toBaselineOf="@id/labelStartDate"
                app:layout_constraintStart_toEndOf="@id/labelStartDate" />

            <TextView
                android:id="@+id/StarRating"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="4.5"
                android:layout_marginStart="58dp"
                android:background="@color/dark_gray"
                android:textColor="@color/white"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                app:layout_constraintBaseline_toBaselineOf="@id/labelStarRating"
                app:layout_constraintStart_toEndOf="@id/labelStarRating" />

            <TextView
                android:id="@+id/projectInfoTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/StarRating"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Project Info"
                android:textSize="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/labelProjectTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="프로젝트"
                android:textColor="@color/purple"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/projectInfoTitle" />

            <TextView
                android:id="@+id/projectTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shopping Mall App"
                app:layout_constraintTop_toBottomOf="@+id/projectInfoTitle"
                app:layout_constraintStart_toEndOf="@+id/labelProjectTitle"
                android:layout_marginTop="5dp"
                android:layout_marginStart="16dp"
                />

            <TextView
                android:id="@+id/labelCompanyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회사명"
                android:textColor="@color/purple"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/projectTitle" />


            <TextView
                android:id="@+id/companyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Happy Company"
                app:layout_constraintTop_toBottomOf="@+id/projectTitle"
                app:layout_constraintStart_toEndOf="@+id/labelProjectTitle"
                android:layout_marginTop="5dp"
                android:layout_marginStart="16dp"
                />

            <TextView
                android:id="@+id/labelWorkStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="근무방식"
                android:textColor="@color/purple"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/labelCompanyName" />

            <TextView
                android:id="@+id/workStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="원격/상주"
                app:layout_constraintTop_toBottomOf="@+id/companyName"
                app:layout_constraintStart_toEndOf="@+id/labelSalary"
                android:layout_marginTop="5dp"
                android:layout_marginStart="16dp"
                />

            <TextView
                android:id="@+id/labelSalary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="예상금액"
                android:textColor="@color/purple"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/labelWorkStyle" />

            <TextView
                android:id="@+id/salary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500만원"
                app:layout_constraintTop_toBottomOf="@+id/workStyle"
                app:layout_constraintStart_toEndOf="@+id/labelSalary"
                android:layout_marginTop="5dp"
                android:layout_marginStart="16dp"
                />

            <TextView
                android:id="@+id/labelDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="상세설명"
                android:textColor="@color/purple"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/labelSalary" />

            <EditText
                android:id="@+id/projectDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:ems="20"
                android:inputType="textMultiLine"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@+id/labelDescription"
                app:layout_constraintStart_toStartOf="@+id/labelDescription"
                android:text="We make Shopping Mall App. We want Server Developer. Call us~~"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- 버튼 그룹 -->
    <Button
        android:id="@+id/btnChatroom"
        android:layout_width="0dp"
        style="@style/PurpleOneButton"
        android:text="채팅방"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnDeny" />

    <Button
        android:id="@+id/btnDeny"
        style="@style/PurpleTwoButton"
        android:layout_marginEnd="12dp"
        android:text="거절"
        android:layout_marginStart="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/checkBoxFreelancer"
        app:layout_constraintEnd_toStartOf="@id/btnAccept"/>

    <Button
        android:id="@+id/btnAccept"
        style="@style/PurpleTwoButton"
        android:layout_marginStart="12dp"
        android:text="계약 완료"
        android:layout_marginEnd="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/checkBoxClient"
        app:layout_constraintStart_toEndOf="@id/btnDeny"/>

    <CheckBox
        android:id="@+id/checkBoxFreelancer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프리랜서"
        style="@style/BlackBold16Text"
        android:buttonTint="@color/purple"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/checkBoxClient"/>

    <CheckBox
        android:id="@+id/checkBoxClient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="클라이언트"
        style="@style/BlackBold16Text"
        android:buttonTint="@color/purple"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/checkBoxFreelancer"/>

    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/myProjects"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_my_projects" />

        <ImageButton
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_home" />

        <ImageButton
            android:id="@+id/myPage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_my_page" />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>